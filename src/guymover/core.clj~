(ns guymover.core
  (:require [com.stuartsierra.component :as component]
            [org.httpkit.server :refer [run-server]])
  (:use [guymover.web]))



(defn- start-server
  "Starts the server.  Returns a function that stops the server."
  [handler port]
  (let [server (run-server #'app {:port port})]
    (println "Started server on localhost: " port)
    server))
